
@{
    ViewBag.Title = "Tuyển Dụng";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tuyển Dụng</title>
    <link rel="stylesheet" href="~/Content/Layout.css" />
    <style>
        body {
            margin: 0;
        }
        /*header*/
        .re-header {
            background-color: #4B7864;
            display: flex;
            justify-content: center;
            height: 70px;
            align-items: center;
        }

        h3 {
            margin: 0;
            font-size: 25px;
            font-weight: bold;
        }
        /*-----------------------content--------------------------*/
        .re-content {
            place-items: center;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .KhungTuyenDung {
            background-color: #4B7864;
            width: 62%;
            padding: 2%;
            margin-bottom: 10px;
            border-radius: 16px;
            justify-items: center;
        }

        h4 {
            color: #02542D;
            margin-top: 10px;
            font-size: 23px;
            font-weight: bold;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);
        }

        .re-content img {
            width: 70%;
            padding: 5px;
        }

        .re-detail {
            margin: 0;
            padding-bottom: 15px;
            font-weight: bold;
            color: white;
        }

        /*bang tuyen dung*/
        table {
            color: white;
            font-size: 25px;
        }

            table td, table th {
                line-height: 1.8;
            }

            table a {
                text-decoration: none;
                font-size: 27px;
                color: #F2CFF1;
                font-weight: bold;
            }
        /*link biểu mẫu*/
        .KhungTuyenDung span {
            align-items: center;
            background-color: #c31818;
            padding: 10px;
            border-radius: 12px;
        }

            .KhungTuyenDung span a {
                font-size: 20px;
                text-decoration: none;
                padding: 15px;
            }
    </style>

</head>
<body>
    @*header*@
    <div class="re-header">
        <h3 style="color:white">BẠN ĐANG TÌM KIẾM MỘT CÔNG VIỆC ?</h3>
    </div>
    @*Content*@
    <div class="re-content">
        <h4>HÃY THAM GIA NGAY CÙNG CHÚNG TÔI</h4>

        @*hình ảnh tuyển dụng*@

        <img src="~/Content/images/Recruit.jpg" />



        @*khung tuyển dụng*@
        <div class="KhungTuyenDung">

            <p class="re-detail">TÌM KIẾM CÔNG VIỆC</p>

            @*bang tuyen dung*@

            <table width=80%>
                <tr style="font-weight:bold">
                    <td style="width:80%" height="10%"> VỊ TRÍ</td>
                    <td> CHI TIẾT</td>
                </tr>
                <tr>
                    <td> Nhân viên bán thời gian </td>
                    <td><a href="~/Home/RecruitDetail"> Tìm hiểu  </a></td>
                </tr>
                <tr>
                    <td> Nhân viên toàn thời gian </td>
                    <td><a href="~/Home/RecruitDetail"> Tìm hiểu </a></td>
                </tr>
                <tr>
                    <td> Quản lí cửa hàng </td>
                    <td><a href="~/Home/RecruitDetail"> Tìm hiểu </a></td>

                </tr>
                <tr>
                    <td> Marketing </td>
                    <td><a href="~/Home/RecruitDetail"> Tìm hiểu </a></td>
                </tr>

            </table>
            <div class"LinkDangKi">
                <span><a href="https://forms.gle/S9kCjdFTREPzuk1YA" style="color:white">ĐĂNG KÍ TUYỂN DỤNG </a></span>
            </div>
        </div>

    </div>
</body>
</html>

