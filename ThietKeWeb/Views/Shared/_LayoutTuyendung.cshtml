﻿
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <style>
        /*--------------header-----------------*/
        .header {
            background-color: #4B7864;
            display: flex;
            justify-content: center;
            height: 70px;
            align-items: center;
        }

        h3 {
            margin: 0;
            font-size: 25px;
        }

        .content {
            place-items: center;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        h4 {
            color: #02542D;
            font-size: 23px;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);
        }

        .content img {
            width: 70%;
            padding: 5px;
        }
        /*----------------------------footer---------------------------*/
        .footer {
            background-color: #6c6565;
            color: white;
            font-size: 18px;
            clear: both;
            display: flex;
            justify-content: center;
            align-items: center;
        }


        p {
            margin-top: 20px;
            margin-left: 10px;
            margin-right: 30px;
        }

        .fb-icon-image {
            width: 35px;
            height: 35px;
            margin-bottom: 10px;
            margin-top: 10px;
        }

        .ins-icon-image {
            width: 35px;
            height: 35px;
            margin-bottom: 10px;
            margin-top: 10px;
        }

        .tw-icon-image {
            width: 35px;
            height: 35px;
            margin-bottom: 10px;
            margin-top: 10px;
        }

        .phone-icon-image {
            width: 35px;
            height: 35px;
            margin-bottom: 10px;
            margin-top: 10px;
        }

        .email-icon-image {
            width: 35px;
            height: 35px;
            margin-bottom: 10px;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="header">
        <h3 style="color:white">BẠN ĐANG TÌM KIẾM MỘT CÔNG VIỆC ?</h3>
    </div>
    <div class="content">
        <h4>HÃY THAM GIA NGAY CÙNG CHÚNG TÔI</h4>

        @*hình ảnh tuyển dụng*@

        <img src="~/Content/images/Recruit.jpg" />

        <div>
            @RenderBody()
        </div>
    </div>
    <div class="footer">
        <div>
            <img src="~/Content/images/fb-icon.png" class="fb-icon-image" />
            <img src="~/Content/images/ins-icon.png" class="ins-icon-image" />
            <img src="~/Content/images/tw-icon.png" class="tw-icon-image" />
        </div>
        <div>
            <p>&copy;  2018 Baron Coffee.  Powered by Group Baron</p>
        </div>
        <div>
            <img src="~/Content/images/phone-icon.png" class="phone-icon-image" />
        </div>
        <div>
            <p>0245269466</p>
        </div>
        <div>
            <img src="~/Content/images/email-icon.png" class="email-icon-image" />
        </div>
        <div>
            <p>customerservice@Baroncoffee.com.vn</p>
        </div>
    </div>
</body>
</html>