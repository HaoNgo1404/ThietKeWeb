<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style type="text/css">
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            font-size: 20px;
            font-weight: bold;
            background-color: #f0f0f0;
            text-decoration: none;
        }

        .header {
            margin-top: 4px;
            width: 100%;
            background-color: gray;
            flex-wrap: wrap;
            align-items: center;
            padding-right:120px;
        }
        li{
            margin-left:20px;
        }
        .nav-link{
            color:white;
        }
        a{
            text-decoration:none;
        }

        .logo {
            width: 100%;
            height: 100px;
        }

        #footer {
            background-color: gray;
            color: white;
            font-size: 18px;
            clear: both;
            display: flex;
            justify-content: center;
        }

        p {
            margin-top: 20px;
            margin-left: 10px;
            margin-right: 30px;
        }

        .fb-icon-image {
            width: 35px;
            height: 35px;
            margin-bottom: 10px;
            margin-top: 10px;
        }

        .ins-icon-image {
            width: 35px;
            height: 35px;
            margin-bottom: 10px;
            margin-top: 10px;
        }

        .tw-icon-image {
            width: 35px;
            height: 35px;
            margin-bottom: 10px;
            margin-top: 10px;
        }

        .phone-icon-image {
            width: 35px;
            height: 35px;
            margin-bottom: 10px;
            margin-top: 10px;
        }

        .email-icon-image {
            width: 35px;
            height: 35px;
            margin-bottom: 10px;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <header class="header navbar navbar-expand-sm">
        <div class="container ">
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a href="@Url.Action("Index", "TrangChu")"><img src="~/Content/images/logo1.png" class="logo" /></a>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Admin/TrangChu", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Danh mục", "Index", "Admin/Admin_Categories", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Sản phẩm", "Index", "Admin/Admin_Products", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Khách hàng", "Index", "Admin/Admin_Customers", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Đơn hàng", "Index", "Admin/Admin_Orders", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Tài khoản", "Index", "Admin/Admin_Users", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </header>
   
    <div>
        @RenderBody()
    </div>
    <footer id="footer">
        <div>
            <img src="~/Content/images/fb-icon.png" class="fb-icon-image" />
            <img src="~/Content/images/ins-icon.png" class="ins-icon-image" />
            <img src="~/Content/images/tw-icon.png" class="tw-icon-image" />
        </div>
        <div>
            <p>&copy;  2018 Baron Coffee.  Powered by Group Baron</p>
        </div>
        <div>
            <img src="~/Content/images/phone-icon.png" class="phone-icon-image" />
        </div>
        <div>
            <p>0245269466</p>
        </div>
        <div>
            <img src="~/Content/images/email-icon.png" class="email-icon-image" />
        </div>
        <div>
            <p>customerservice@Baroncoffee.com.vn</p>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
