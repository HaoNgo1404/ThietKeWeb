<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style type="text/css">
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            font-size: 20px;
            font-weight: bold;
            background-color: #f0f0f0;
            text-decoration: none;
        }

        .header {
            margin-top: 4px;
            width: 100%;
            background-color: gray;
            flex-wrap: wrap;
            align-items: center;
            padding-right: 120px;
        }

        li {
            margin-left: 20px;
        }

        .nav-link {
            color: white;
        }

        a {
            text-decoration: none;
        }

        .logo {
            width: 200px;
            height: 100px;
        }

        #footer {
            background-color: gray;
            color: white;
            font-size: 18px;
            clear: both;
            margin-top: 10px;
            display: flex;
            justify-content: center;
        }

        p {
            margin-top: 20px;
            margin-left: 10px;
            margin-right: 30px;
        }

        .fb-icon-image {
            width: 35px;
            height: 35px;
            margin-bottom: 10px;
            margin-top: 10px;
        }

        .ins-icon-image {
            width: 35px;
            height: 35px;
            margin-bottom: 10px;
            margin-top: 10px;
        }

        .tw-icon-image {
            width: 35px;
            height: 35px;
            margin-bottom: 10px;
            margin-top: 10px;
        }

        .phone-icon-image {
            width: 35px;
            height: 35px;
            margin-bottom: 10px;
            margin-top: 10px;
        }

        .email-icon-image {
            width: 35px;
            height: 35px;
            margin-bottom: 10px;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <header class="header navbar navbar-expand-sm ">
        <div class="container-fluid ">
            <a href="@Url.Action("Index", "TrangChu")"><img src="~/Content/images/logo1.png" class="logo" /></a>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "TrangChu", new { area = "Admin" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Danh mục", "Index", "Admin_Categories", new { area = "Admin" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Sản phẩm", "Index", "Admin_Products", new { area = "Admin" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Size", "Index", "Admin_Size", new { area = "Admin" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Khách hàng", "Index", "Admin_Customers", new { area = "Admin" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Đơn hàng", "Index", "Admin_Orders", new { area = "Admin" }, new { @class = "nav-link" })</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="nav-item dropdown">
                        @if (Session["Username"] != null)
                        {
                            <a class="nav-link dropdown-toggle" role="button" data-toggle="dropdown" href="#"><span class="fas fa-user"></span>@Session["Username"]</a>
                            <div class="dropdown-menu">
                                @Html.ActionLink("Thông tin tài khoản", "ProfileInfo", "Admin_Account", new { area = "Admin" }, new { @class = "dropdown-item" })
                                @Html.ActionLink("Đổi mật khẩu", "ChangePassword", "Admin_Account", new { area = "Admin" }, new { @class = "dropdown-item" })
                                <div class="dropdown-divider"></div>
                                @Html.ActionLink("Đăng xuất", "Logout", "Admin_Account", new { area = "Admin" }, new { @class = "dropdown-item" })
                            </div>
                        }
                        else
                        {
                            <a class="nav-link dropdown-toggle" role="button" data-toggle="dropdown" href="#"><span class="fas fa-user"></span>Tài khoản</a>
                            <div class="dropdown-menu">
                                @Html.ActionLink("Đăng nhập", "Login", "Admin_Account", new { area = "Admin" }, new { @class = "dropdown-item" })
                                @Html.ActionLink("Đăng ký", "Register", "Admin_Account", new { area = "Admin" }, new { @class = "dropdown-item" })
                            </div>
                        }
                    </li>
                </ul>
            </div>
        </div>
    </header>

    <div class="body-content container-fluid">
        @RenderBody()
    </div>
    <footer id="footer" class=" container-fluid">
        <div>
            <img src="~/Content/images/fb-icon.png" class="fb-icon-image" />
            <img src="~/Content/images/ins-icon.png" class="ins-icon-image" />
            <img src="~/Content/images/tw-icon.png" class="tw-icon-image" />
        </div>
        <div>
            <p>&copy;  2018 Baron Coffee.  Powered by Group Baron</p>
        </div>
        <div>
            <img src="~/Content/images/phone-icon.png" class="phone-icon-image" />
        </div>
        <div>
            <p>0245269466</p>
        </div>
        <div>
            <img src="~/Content/images/email-icon.png" class="email-icon-image" />
        </div>
        <div>
            <p>customerservice@Baroncoffee.com.vn</p>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
